@article{ellis_people_2021,
  title = {People Have Shaped Most of Terrestrial Nature for at Least 12,000 Years},
  author = {Ellis, Erle C. and Gauthier, Nicolas and Klein Goldewijk, Kees and Bliege Bird, Rebecca and Boivin, Nicole and D{\'i}az, Sandra and Fuller, Dorian Q. and Gill, Jacquelyn L. and Kaplan, Jed O. and Kingston, Naomi and Locke, Harvey and McMichael, Crystal N. H. and Ranco, Darren and Rick, Torben C. and Shaw, M. Rebecca and Stephens, Lucas and Svenning, Jens-Christian and Watson, James E. M.},
