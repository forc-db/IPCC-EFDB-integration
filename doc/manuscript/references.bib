  author = {Quegan, Shaun and Le Toan, Thuy and Chave, Jerome and Dall, Jorgen and Exbrayat, Jean-Fran{\c c}ois and Minh, Dinh Ho Tong and Lomas, Mark and D'Alessandro, Mauro Mariotti and Paillou, Philippe and Papathanassiou, Kostas and Rocca, Fabio and Saatchi, Sassan and Scipal, Klaus and Shugart, Hank and Smallman, T. Luke and Soja, Maciej J. and Tebaldini, Stefano and Ulander, Lars and Villard, Ludovic and Williams, Mathew},
  year = {2019},
