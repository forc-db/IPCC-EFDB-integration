  author = {{Anderson-Teixeira}, Kristina J. and Wang, Maria M. H. and McGarvey, Jennifer C. and Herrmann, Valentine and Tepley, Alan J. and {Bond-Lamberty}, Ben and LeBauer, David S.},
  year = {2018},
  journal = {Ecology},
  volume = {99},
