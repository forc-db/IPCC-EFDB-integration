@article{fukushima_recovery_2007,
  title = {Recovery Process of Fallow Vegetation in the {{Traditional Karen Swidden Cultivation System}} in the {{Bago Mountain Range}}, {{Myanmar}}},
  author = {Fukushima, M. and Kanzaki, Mamoru and Maung, T. and Minn, Yazar},
  year = {2007},
