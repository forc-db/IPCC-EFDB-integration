@article{rozendaal_aboveground_2022,
  title = {Aboveground Forest Biomass Varies across Continents, Ecological Zones and Successional Stages: Refined {{IPCC}} Default Values for Tropical and Subtropical Forests},
  shorttitle = {Aboveground Forest Biomass Varies across Continents, Ecological Zones and Successional Stages},
  author = {Rozendaal, Dana{\"e} M. A. and Suarez, Daniela Requena and Sy, Veronique De and Avitabile, Valerio and Carter, Sarah and Yao, C. Y. Adou and {Alvarez-Davila}, Esteban and {Anderson-Teixeira}, Kristina and {Araujo-Murakami}, Alejandro and Arroyo, Luzmila and Barca, Benjamin and Baker, Timothy R. and Birigazzi, Luca and Bongers, Frans and Branthomme, Anne and Brienen, Roel J. W. and Carreiras, Jo{\~a}o M. B. and Gatti, Roberto Cazzolla and {Cook-Patton}, Susan C. and Decuyper, Mathieu and DeVries, Ben and Espejo, Andres B. and Feldpausch, Ted R. and Fox, Julian and Gamarra, Javier G. P. and Griscom, Bronson W. and Harris, Nancy and H{\'e}rault, Bruno and Coronado, Eur{\'i}dice N. Honorio and Jonckheere, Inge and Konan, Eric and Leavitt, Sara M. and Lewis, Simon L. and Lindsell, Jeremy A. and N'Dja, Justin Kassi and N'Guessan, Anny Estelle and Marimon, Beatriz and Mitchard, Edward T. A. and Monteagudo, Abel and Morel, Alexandra and Pekkarinen, Anssi and Phillips, Oliver L. and Poorter, Lourens and Qie, Lan and Rutishauser, Ervan and Ryan, Casey M. and Santoro, Maurizio and Silayo, Dos Santos and Sist, Plinio and Slik, J. W. Ferry and Sonk{\'e}, Bonaventure and Sullivan, Martin J. P. and Laurin, Gaia Vaglio and Vilanova, Emilio and Wang, Maria M. H. and Zahabu, Eliakimu and Herold, Martin},
  year = {2022},
