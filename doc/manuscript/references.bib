  keywords = {Above-ground biomass,Above-ground biomass change,Carbon flux,Earth observation,Global carbon cycle,Map assessment},
  file = {/Users/kteixeira/Zotero/storage/IRSQF2CN/Araza et al. - 2023 - Past decade above-ground biomass change comparison.pdf;/Users/kteixeira/Zotero/storage/DKQ73QUR/S1569843223000961.html}
}

@article{badgley_systematic_2022,
  title = {Systematic Over-Crediting in {{California}}'s Forest Carbon Offsets Program},
